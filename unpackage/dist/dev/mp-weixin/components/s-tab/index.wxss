.s-tab-nav {
  display: -webkit-inline-box;
  display: -webkit-inline-flex;
  display: inline-flex;
  height: 100%;
  font-size: 28rpx;
  padding: 0 30rpx;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  box-sizing: border-box;
  cursor: pointer;
}
.s-tab-nav.is-disabled {
    color: #c8c9cc !important;
    cursor: not-allowed;
}
.s-tab-wrap {
  width: 100%;
  height: 0;
  font-size: 28rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  white-space: normal;
  overflow: hidden;
  box-sizing: border-box;
}
.s-tab-wrap.is-active {
    height: auto;
    overflow: visible;
}

